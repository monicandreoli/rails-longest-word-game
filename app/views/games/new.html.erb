<div class="container d-flex flex-column justify-content-center text-center">
  <h1>New Game</h1>
  <div class="d-flex flex-row justify-content-center text-center">
    <% @letters.each do |letter| %>
    <div class="card m-1 p-3 text-center">
      <h5><%= letter %></h5>
    </div>
    <% end %>
  </div>

  <p class="mt-3">What is the longest wors you can find?</p>
  <form class="form-inline
justify-content-center mt-1" action="/score">
    <div class="form-group">
    <%= hidden_field_tag :letters, @letters %>
       <input class="form-control mr-2" type="text" name="word">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input class="form-control btn btn-primary" type="submit" value="play">
    </div>
  </form>
</div>